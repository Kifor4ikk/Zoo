<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.epam.rd.tasks.zoo.repository.animals.bird.BirdRepository">

    <resultMap id="birdResultMap" type="com.epam.rd.tasks.zoo.animal.bird.Bird">
        <result column="name" property="name"/>
        <result column="describe" property="describe"/>
        <result column="age" property="age"/>
        <result column="isDeleted" property="isDeleted"/>
        <result column="wings" property="wings"/>
    </resultMap>

    <insert id="createBird">
        INSERT INTO bird (id, wings) VALUES (#{id}, #{wings});
    </insert>

</mapper>